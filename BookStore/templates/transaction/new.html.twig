{% extends 'base.html.twig' %}

{% block title %}New Transaction{% endblock %}

{% block body %}
    <h1>
        Bid the Book
        <button class="btn" style ="float:right; color: black;"><a href="{{ path('book_buy') }}" style ="color: black; font-size: 20px;">back to list</a></button>
    </h1>
    <hr>
    <div>
        <img src = "{{ book.image }}" >
        <div style="font-size: 20px; color: black; font-family:Elephant; float:right; margin-top:75px; margin-right: 30%;">
            Title: {{ book.title }}<br>
            Author: {{ book.author }}<br>
            Price: &euro; {{ book.price }}<br>
            Seller: {{ book.seller }}
        </div>
    </div>
    <br><br>
    {{ include('transaction/_form.html.twig', {'button_label': 'Confirm'}) }}
{% endblock %}
