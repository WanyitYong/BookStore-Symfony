{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>
        Book Details
        <button class="btn" style ="float:right; color: black;"><a href="{{ path('book_buy') }}" style ="color: black; font-size: 20px;">back to list</a></button>
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <td><img src = "{{ book.image }}"></td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>&euro; {{ book.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>

        </tbody>
    </table>
    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN')%}
        <button class="btn" id = "buy" style ="font-size: 20px; "><a href="{{ path('book_bid', {'id': book.id}) }}" style ="color: black; font-size: 20px;">BID</a></button>
    {% endif %}
